{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "outDir": "./lib/cjs/",
    "rootDir": "./js/src/",
    "sourceMap": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["js/src/**/*.ts"],
  "exclude": ["node_modules", "node", "dist", "lib"]
}
